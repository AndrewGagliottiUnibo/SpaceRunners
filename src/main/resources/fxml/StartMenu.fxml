               <font>
                  <Font size="25.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </VBox>
      <Text fill="#ff1c00" layoutX="90.0" layoutY="125.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SpaceRunner" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="52.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
