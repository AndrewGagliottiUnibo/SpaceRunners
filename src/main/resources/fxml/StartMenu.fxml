<AnchorPane maxHeight="720.0" maxWidth="500.0" minHeight="720.0" minWidth="500.0" prefHeight="720.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="720.0" fitWidth="506.0" layoutX="-5.0">
         <image>
            <Image url="@../Images/stars2.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" layoutX="100.0" layoutY="145.0" prefHeight="517.0" prefWidth="300.0" spacing="60.0">
         <children>
            <Button mnemonicParsing="false" onAction="#pickNickname" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: rgba(0,0,0,0); -fx-text-fill: yellow" text="PLAY">
               <font>
                  <Font size="25.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#showScores" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: rgba(0,0,0,0); -fx-text-fill: yellow" text="SCORES">
               <font>
                  <Font size="25.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
